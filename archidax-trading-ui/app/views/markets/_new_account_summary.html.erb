<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Currency</th>
            <th scope="col">Amount</th>
            <th scope="col">Locked</th>
        </tr>
    </thead>
    <tbody>
        <% @data.fetch(:my_accounts).each do |account| %>
          <% market = @data.fetch(:current_market) %>
          <% ccy = account.fetch(:currency) %>
          <tr class="<%= ccy.fetch(:code) %>">
            <td class="account-symbol">
              <div><%= ccy[:code].upcase %></div>
            </td>
            <td class="account-balance">
              <span class="amount" data-title="<%= t('.amount') %>"><%= account.fetch(:amount) %></span>
            </td>
            <td>
              <span class="locked" data-title="<%= t('.locked') %>"><%= account.fetch(:locked) %></span>
            </td>
          </tr>
        <% end %>
        <tr>
          <td>
            <span>Total:</span>
          </td>
          <td colspan="2"><span id="total_assets" data-title="<%= t('.title') %>"></span></td>
        </tr>
    </tbody>
</table>