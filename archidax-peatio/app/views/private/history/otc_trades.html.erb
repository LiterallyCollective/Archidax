<% content_for :frame do %>
  <div class="container history-pages">
    <%= render 'tabs', active: :otc_trade %>

    <div class="card card-default" id="otc_trades">
      <div class="card-body">
        <div class="col-24">
          <table class="table table-condensed table-striped">
            <thead>
              <tr>
                <th><%= t('.side') %></th>
                <th><%= t('.created_at') %></th>
                <th><%= t('.display_currency') %></th>
                <th><%= t('.base_amount') %></th>
                <th><%= t('.quote_currency') %></th>
                <th><%= t('.quote_amount') %></th>
                <th><%= t('.price') %></th>
              </tr>
            </thead>
            <tbody class="list">
              <%= render partial: 'otc_trade', collection: @otc_trades %>
            </tbody>
          </table>
          <div class="float-right">
            <%= paginate @otc_trades %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
