<h3 class="p-4">Welcome To Login</h3>
<div class="cryptorio-main-form">
  <%= form_for(resource, as: resource_name, url: accounts_sign_in_confirm_path, html: {class: 'text-left'} ) do |f| %>
    <%= devise_error_messages! %>

    <%= f.label :email, "Account Name" %>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'Your email/cellphone', required: true %>

    <!-- <label for="password">Password</label>
    <input type="password" id="password" name="password" placeholder="Please Input Your Password"> -->

    <%= f.submit 'Log In', class: 'crypt-button-red-full' %>
  <% end %>
  
  <% if account_signed_in? %>
    <%= render 'layouts/shared/account_footer' %>
  <% else %>
    <%= render 'devise/shared/footer' %>
  <% end %>
</div>
