<h3 class="p-4">Resend unlock instructions</h3>
<div class="cryptorio-main-form">
  <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: "text-left" }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.label :email, 'Email' %>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'Your email/cellphone' %>

    <%= f.submit 'Resend', class: 'crypt-button-red-full' %>
  <% end %>

  <% if account_signed_in? %>
    <%= render 'layouts/shared/account_footer' %>
  <% else %>
    <%= render 'devise/shared/footer' %>
  <% end %>
</div>